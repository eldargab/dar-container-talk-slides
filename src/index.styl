@require './styles/all.styl'


* {
  box-sizing: border-box;
}


:root {
  --main-text-color: rgba(0, 0, 0, 0.7);
  --main-font: "Helvetica Neue", Helvetica, Arial, sans-serif;
  --monospace-font: Menlo, Consolas, Inconsolata, monospace;
  --light-font: 200;
  --gray: #aaa;
}


html, body {
  font-family: var(--main-font);
  font-size: 24px;
  letter-spacing: 1px;
  color: var(--main-text-color);
  line-height: normal;
}


.example-graph {
  opacity: 0.7;
}


.reveal .speaker-notes {
  font-family: var(--main-font);
  font-size: 16px;
  color: var(--main-text-color);
  ph(2)
  pv(0)
  &::before {
    content: "Комментарии";
    font-weight: var(--light-font);
    font-size: 24px
    opacity: 1;
    color: var(--gray);
    mv(3);
  }
  p {
    mv(2)
  }
  .inline-code {
    font-family: var(--monospace-font);
    color: #888;
  }
}


span.arrow {
  color: var(--gray);
}


pre code {
  font-family: var(--monospace-font);
  font-size: var(--font-small);
  line-height: 1.5;
}


.hljs {
  padding: 0;
}


.slides > * {
  text-align: left;
}


.slides section {
  height: 100%;
}


.reveal .slides > section {
  &, & > section {
    padding: 0;
  }
}


.pad-center {
  padding-bottom: 8%;
}


.gray {
  color: var(--gray);
}


ol, ul {
  list-style-type: none;
  counter-reset: list-item;
}


li {
  counter-increment: list-item;
}


ol > li::before {
  content: counter(list-item);
}


li::before, span.number {
  font-weight: 600;
  color: var(--gray);
  padding-right: var(--space-2);
}


.header {
  @extend .f3;
  font-weight: var(--light-font);
  color: var(--gray);
}


highlight-subgraph(color)
  ellipse, path {
    stroke: color;
  }
  polygon {
    fill: color;
    stroke: color;
  }


.highlight-req .example-graph .req {
  highlight-subgraph: red;
}


.highlight-dep .example-graph .dep {
  highlight-subgraph: green;
}