@require './styles/space.styl'
@require './styles/font.styl'
@require './styles/flex.styl'


html, body {
  font-family: "Helvetica Neue";
  font-size: 24px;
  letter-spacing: 1px;
  color: rgba(0, 0, 0, 0.7);
  line-height: normal;
}


.slides > * {
  text-align: left;
}


:root {
  --gray: #aaa;
}


.gray {
  color: var(--gray);
}


ol, ul {
  list-style-type: none;
  counter-reset: list-item;
}


li {
  counter-increment: list-item;
}


ol > li::before {
  content: counter(list-item);
  font-weight: 600;
  color: var(--gray);
  padding-right: var(--space-2);
}


pre code {
  font-family: Menlo, Consolas, Inconsolata, monospace;
  line-height: 1.5;
  font-size: var(--font-small);
}


.graph {
  opacity: .7;
}


gen-paddings()
gen-margins()
gen-font-weights()
gen-font-sizes()


.text-align-left { text-align: left; }
.text-align-center { text-align: center; }


.size-full {
  width: 100%;
  height: 100%;
}